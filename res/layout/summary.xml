<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/screen"
    android:background="@drawable/summary" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/select_btn"
        android:layout_alignLeft="@+id/select_btn"
        android:layout_marginBottom="16dp" >
    </RadioGroup>

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="28dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/screen_shot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:background="@drawable/ranking_icon" />

    <Button
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/select_icon" />

     <TextView
         android:id="@+id/textgoodjob"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/radioGroup1"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="88dp"
         android:text="practice makes everything perfect !"
         android:textColor="#000000"
         android:textSize="24dp"
         android:textStyle="italic" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/radioGroup1"
         android:layout_alignParentTop="true"
         android:layout_marginTop="86dp"
         android:text="Your Score"
         android:textColor="#000000"
         android:textSize="28dp"
         android:textStyle="italic" />

</RelativeLayout>